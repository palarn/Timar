<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.freyds.timar.Vinna"
    android:id="@+id/">

    <Chronometer android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingBottom="30dip"
        android:paddingTop="30dip"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toStartOf="@+id/button_out"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/button_out"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button_in" />

    <TextView
        android:text="Hagkaup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stimpla inn"
        android:id="@+id/button_in"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        android:layout_alignEnd="@+id/button_out" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stimpla út"
        android:id="@+id/button_out"
        android:layout_toEndOf="@+id/textView"
        android:layout_below="@+id/button_in"
        android:layout_alignStart="@+id/button_in"
        android:layout_toStartOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unnir tímar yfir daginn:"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:layout_above="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="79dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upphæð:"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="69dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amount"
        android:layout_toEndOf="@+id/textView"
        android:textSize="20dp"
        android:layout_toStartOf="@+id/textView"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignEnd="@+id/chronometer"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hours"
        android:layout_toEndOf="@+id/amount"
        android:textSize="20dp"
        android:layout_toStartOf="@+id/textView"
        android:layout_alignEnd="@+id/chronometer"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignStart="@+id/amount"
        android:layout_above="@+id/amount" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/button_reset"
        android:layout_below="@+id/button_out"
        android:layout_alignStart="@+id/button_out"
        android:layout_alignEnd="@+id/button_out" />

</RelativeLayout>
