<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.freyds.timar3.breyta_vinnu"
    android:onClick="changeJob"
    android:background="#ffd5d5d5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breyta upplÃ½singum:"
        android:id="@+id/test"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="50dp"
        android:layout_marginBottom="50dp"
        android:textSize="30dp" />

    <TextView
        android:text="Heiti vinnu:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="79dp"
        android:id="@+id/textView_yfirlit_top" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_name"
        android:layout_below="@+id/textView_yfirlit_top"
        android:layout_alignEnd="@+id/test"
        android:layout_toEndOf="@+id/name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dagvinnukaup:"
        android:id="@+id/name"
        android:textSize="20dp"
        android:layout_below="@+id/new_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_salary1"
        android:layout_below="@+id/name"
        android:layout_alignEnd="@+id/new_name"
        android:layout_alignStart="@+id/new_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yfirvinnukaup:"
        android:id="@+id/amount"
        android:layout_below="@+id/new_salary1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_salary2"
        android:layout_below="@+id/amount"
        android:layout_alignEnd="@+id/new_salary1"
        android:layout_alignStart="@+id/new_salary1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/change_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/vista"
        android:layout_marginBottom="20dp"
        android:onClick="changeJob" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/old_name"
        android:layout_toEndOf="@+id/old_salary1"
        android:layout_below="@+id/textView_yfirlit_top"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/old_salary1"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/old_salary2"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/amount"
        android:layout_alignEnd="@+id/old_salary1" />


</RelativeLayout>

